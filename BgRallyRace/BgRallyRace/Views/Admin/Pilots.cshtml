@model BgRallyRace.ViewModels.PilotViewModels
@{
    ViewData["Title"] = "Pilots";
}

@if (Model.Text != null)
{
    <div class="alert alert-success" role="alert">
        <strong>Чудесно!</strong> @Model.Text
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<a class=" background">
    <table class="table table-hover">
        <thead>
            <tr class="table">
                <th scope="col">Име</th>
                <th scope="col">Фамилия</th>
                <th scope="col">Години</th>
                <th scope="col">Концентрация</th>
                <th scope="col">Опит</th>
                <th scope="col">Физическо състояние</th>
                <th scope="col">Килограми</th>
                <th scope="col">Отбор</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pilot in Model.Pilots)
            {
                <tr>
                    <th scope="row">@pilot.FirstName</th>
                    <td>@pilot.LastName</td>
                    <td>@pilot.Age</td>
                    <td>@pilot.Concentration</td>
                    <td>@pilot.Experience</td>
                    <td>@pilot.PhysicalTraining</td>
                    <td>@pilot.Pounds</td>
                    <td>@pilot.TeamId</td>
                    <td>
                        @if (@pilot.TeamId == null)
                        {
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <a class="btn btn-default btn-sm" asp-controller="Admin" asp-action="EditPilot" asp-route-id="@pilot.Id">
                                        <i class="fa fa-pencil" data-placement="top" title="Редактиране на пилот">Редактирай</i>
                                    </a>
                                </div>
                                <div class="col-sm-6">
                                    <a class="btn" asp-controller="Admin" asp-action="DeletePilot" asp-route-id="@pilot.Id">
                                        <i class="fa fa-trash" data-placement="top" title="Изтриване на пилот">Изтрии</i>
                                    </a>
                                </div>
                            </div>
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>

        </tfoot>
        <div>
            @if (!Model.PreviousDisabled)
            {
                <a href="/Admin/Pilots?page=@Model.PreviousPage" class="float-left btn btn-info">Назад</a>
            }
            .... @Model.CurrentPage ....
            @if (!Model.NextDisabled)
            {
                <a href="/Admin/Pilots?page=@Model.NextPage" class="float-right btn btn-info">Напред</a>
            }
        </div>
    </table>
</a>