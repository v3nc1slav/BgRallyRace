@model BgRallyRace.ViewModels.PilotViewModels
@{
    ViewData["Title"] = "EditPilot";
}

<div class="form-group row">
    <div class="col-sm-2">
        <partial name="_LeftBarPartial" />
    </div>
    <div class="col-sm-8">
        <a class=" background">
            <p>Ппилот</p>
            <form asp-controller="Admin" asp-action="EditPilot" method="post" class="form-group">
                <partial name="_PeoplePartial" />
                <div>
                    <label asp-for="Reflexes"> Рефлекс </label>
                    <input asp-for="Reflexes" class="form-control" placeholder="0-100" />
                    <span asp-validation-for="Reflexes" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-secondary">Редактирай</button>
            </form>
        </a>
    </div>
    <div class="col-sm-2">
        <partial name="_RightBarPartial" />
    </div>
</div>
