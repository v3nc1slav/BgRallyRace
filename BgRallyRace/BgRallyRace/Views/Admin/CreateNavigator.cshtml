@model BgRallyRace.ViewModels.NavigatorViewModels
@{
    ViewData["Title"] = "CreateNavigator";
}

@if (Model.Text != null)
{
    <div class="alert alert-success" role="alert">
        <strong>Чудесно!</strong> @Model.Text
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="form-group row">
    <div class="col-sm-2">
        <partial name="_LeftBarPartial" />
    </div>
    <div class="col-sm-8">
        <a class=" background">
            <p>Създаване на Навигатор</p>
            <form asp-controller="Admin" asp-action="CreateNavigator" method="post" class="form-group">
                <partial name="_PeoplePartial" />
                <div>
                    <label asp-for="Communication"> Рефлекс </label>
                    <input asp-for="Communication" class="form-control" placeholder="0-100" />
                    <span asp-validation-for="Communication" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-secondary">Създай</button>
            </form>
        </a>
    </div>
    <div class="col-sm-2">
        <partial name="_RightBarPartial" />
    </div>
</div>
