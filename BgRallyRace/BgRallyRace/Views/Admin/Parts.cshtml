@model BgRallyRace.ViewModels.PartsViewModels
@{
    ViewData["Title"] = "Parts";
}

<div class="form-group row">
    <div class="col-sm-2">
        <partial name="_LeftBarPartial" />
    </div>
    <div class="col-sm-8">
        <a class=" background">
            <p>Създаване на Части за Коли</p>
            <form asp-controller="Admin" asp-action="Parts" method="post" class="form-group">
                <div>
                    <label asp-for="Type">Тип</label>
                    <select asp-for="Type" class="form-control" />
                    <option value="Аеродинамика" selected="">Аеродинамика</option>
                    <option value="Спирачки">Спирачки</option>
                    <option value="Двигател">Двигател</option>
                    <option value="СкоростнаКутия">СкоростнаКутия</option>
                    <option value="Купе">Купе</option>
                    <option value="Шаси">Шаси</option>
                    <option value="Турбо">Турбо</option>
                    </select>
                </div>
                <div>
                    <label asp-for="Name">Име</label>
                    <input asp-for="Name" class="form-control" placeholder="Име" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Price">Цена</label>
                    <input asp-for="Price" class="form-control" placeholder="Цена" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Strength">Здравина</label>
                    <input asp-for="Strength" class="form-control" placeholder="Здравина" />
                    <span asp-validation-for="Strength" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Speed">Скорост</label>
                    <input asp-for="Speed" class="form-control" placeholder="Скорост" />
                    <span asp-validation-for="Speed" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-secondary">Създай</button>
            </form>
        </a>
    </div>
    <div class="col-sm-2">
        <partial name="_RightBarPartial" />
    </div>
</div>
