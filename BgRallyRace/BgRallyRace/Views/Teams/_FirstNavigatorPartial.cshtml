@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "FirstNavigator";
}

    <div class="form-group row">
        <div class="col-sm-8">
            <h3>@Model.Navigators[0].FirstName @Model.Navigators[0].LastName</h3>
            <p></p>
            <a>Години</a>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @Model.Navigators[0].Age%;">@Model.Navigators[0].Age</div>
            </div>
            <p></p>
            <a>Концентрация</a>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @Model.Navigators[0].Concentration%;">@Model.Navigators[0].Concentration</div>
            </div>
            <p></p>
            <a>Комуникация</a>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @Model.Navigators[0].Communication%;">@Model.Navigators[0].Communication</div>
            </div>
            <p></p>
            <a>Опит</a>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @Model.Navigators[0].Experience%;">@Model.Navigators[0].Experience</div>
            </div>
            <p></p>
            <a>Преданост</a>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @Model.Navigators[0].Devotion%;">@Model.Navigators[0].Devotion</div>
            </div>
            <p></p>
            <a>Физическа пдготовка/състояние</a>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @Model.Navigators[0].PhysicalTraining%;">@Model.Navigators[0].PhysicalTraining</div>
            </div>
            <p></p>
            <a>Енергия</a>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @Model.Navigators[0].Energy%;">@Model.Navigators[0].Energy</div>
            </div>
            <a>Килограми</a>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @Model.Navigators[0].Pounds%;">@Model.Navigators[0].Pounds</div>
            </div>
            <p></p>
            <a>Заплата</a>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @Model.Navigators[0].Salary%;">@Model.Navigators[0].Salary лв.</div>
            </div>
        </div>

        <div class="col-sm-4">
            <partial name="_ TrainingPartial" />
            <partial name="_ DismissalPartial" />
            <partial name="_ SalaryPartial" />
        </div>
    </div>




