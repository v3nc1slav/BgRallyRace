@if (User.IsInRole("Admin"))
{
    <div class="RightBackgroundAdmin">
        <p><a asp-controller="Admin" asp-action="Runway">Създай Писта</a></p>
        <p><a asp-controller="Admin" asp-action="....">Създай Състезание</a></p>
        <p><a asp-controller="Admin" asp-action="Pilot">Създай Пилот</a></p>
        <p><a asp-controller="Admin" asp-action="Navigator">Създай Навигатор</a></p>
        <p><a asp-controller="Admin" asp-action="Parts">Създай Части за кола</a></p>
    </div>
}

<script>
    var acc = document.getElementsByClassName("nav-item dropdown");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            if (panel.style.display === "block") {
                panel.style.display = "none";
            } else {
                panel.style.display = "block";
            }
        });
    }
</script>
