@using Microsoft.AspNetCore.Identity
@using BgRallyRace.Services;
@using BgRallyRace.Data;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (true)
{
    <div class="background">
        <form
            asp-controller="Home" asp-action="Team" method="post" class="form-group">
            <a>Дай име на Отбора си!</a>
            <textarea class="form-control" id="exampleTextarea" cols="5" rows="2" class="flL w200"></textarea>
            <button type="submit" class="btn btn-secondary">Побликувай</button>
        </form>
    </div>
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="form-group row">
        <div class="col-sm-3">
            <div class="background">
                <p>Екип</p>
                <p>Кола</p>
                <p>Състезание</p>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="background">
                <p>Следващото състезание започва след:</p>
                <p id="demo"></p>
                <p>Подтотви си за него тук!</p>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="background">
                <p>Статистика</p>
                <p>Финанси</p>
            </div>
        </div>
    </div>
}
else
{
    <div class="background">
        <div class="row">
            <div class="col-sm-4"> </div>
            <div class="col-sm-4">
                <p>Следващото състезание започва след:</p>
                <p id="demo"></p>
                <p>
                    <a class="nav-link " asp-area="Identity" asp-page="/Account/Login">Вход</a>
                </p>
                <p>
                    <a class="nav-link " asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
                </p>
            </div>
            <div class="col-sm-4"> </div>
        </div>
    </div>
}






