@{
    ViewData["Title"] = "Home Page";
}
<div class="background">
    <form form id="account" method="post">
        <fieldset>
            <div class="form-group">
                <div class="form-group row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4">
                        <label for="exampleInputEmail1">Потребителско Име:</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                               placeholder="Потребителско Име:" maxlength="50">
                    </div>
                </div>
            </div>
            <div class="col-sm-4"></div>
            <div class="form-group">
                <div class="form-group row">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4">
                        <label for="exampleInputPassword1">Парола:</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Парола:" maxlength="50">
                    </div>
                </div>
            </div>
            <div class="col-sm-4"></div>
        </fieldset>
    </form>
    <p>
        <button tabindex="5" type="submit" class="btn btn-success">Вход</button>
    </p>
    <p>
        <a id="forgot-password" asp-area="Identity" asp-page="/Account/ForgotPassword">Забравена парола?</a>
    </p>
    <p>
        <a class="nav-link " asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
    </p>
</div>

